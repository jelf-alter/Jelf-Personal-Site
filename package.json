{
  "name": "personal-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm run build:client",
    "build:full": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "build:with-types": "npm run type-check && npm run build",
    "start": "node server/dist/index.js",
    "preview": "vite preview",
    "cleanup": "powershell -ExecutionPolicy Bypass -File cleanup-ports.ps1",
    "test": "vitest",
    "test:run": "vitest run",
    "test:server": "vitest run --config server/vitest.config.ts",
    "test:server:watch": "vitest --config server/vitest.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --reporter=verbose src/**/*.test.ts",
    "test:property": "vitest run --reporter=verbose src/**/*.property.test.ts",
    "test:components": "vitest run --reporter=verbose src/components/**/*.test.ts",
    "test:stores": "vitest run --reporter=verbose src/stores/**/*.test.ts",
    "test:utils": "vitest run --reporter=verbose src/utils/**/*.test.ts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitest/coverage-v8": "^1.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "fast-check": "^3.15.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "supertest": "^7.2.2",
    "terser": "^5.46.0",
    "tsx": "^4.21.0",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "vue-tsc": "^1.8.25"
  }
}
